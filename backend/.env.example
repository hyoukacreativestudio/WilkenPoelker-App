NODE_ENV=development
PORT=5002
USE_SQLITE=false

# App Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wilkenpoelker_app
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Taifun Database (Placeholder)
TAIFUN_DB_HOST=localhost
TAIFUN_DB_PORT=3306
TAIFUN_DB_NAME=taifun_db
TAIFUN_DB_USER=taifun_user
TAIFUN_DB_PASSWORD=

# JWT - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_RANDOM_64_BYTE_HEX
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=REPLACE_WITH_ANOTHER_RANDOM_64_BYTE_HEX
JWT_REFRESH_EXPIRES_IN=7d

# Firebase - Path to service account JSON (download from Firebase Console)
FIREBASE_SERVICE_ACCOUNT=./firebase-service-account.json

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Email (SMTP)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_USER=your_smtp_user
EMAIL_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@wilkenpoelker.de

# Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Sentry (optional - leave empty to disable error tracking)
SENTRY_DSN=
# SENTRY_FORCE_ENABLE=true  # Uncomment to enable in development

# URLs
API_URL=http://localhost:5002
APP_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081
